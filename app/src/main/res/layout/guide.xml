<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lila_transparent"
    android:orientation="vertical"
    android:padding="20dp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/guideLayout"
    android:visibility="gone">

    <!-- Texto "Bienvenido" -->
    <TextView
        android:id="@+id/textStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BIENVENIDO"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif" />

    <ImageView
        android:id="@+id/egg_thief"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/egg_thief"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />


    <!-- Descripción de la aplicación -->
    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aquí aprenderás a navegar por pestañas llenas de dragones, mundos fascinantes y montones de tesoros brillantes."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp" />


    <ImageView
        android:id="@+id/skillPointsImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/skill_points"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp" />

    <!-- Descripción de la aplicación -->
    <TextView
        android:id="@+id/textDescription2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Listo para comenzar?\n\nPulsa el botón para comenzar y deja que Spyro te lleve volando a través de esta guía interactiva¡"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp" />


    <!-- Botón "Comenzar" -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comenzar"
        android:textColor="@color/white"
        android:background="@drawable/button_normal"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:padding="20dp" />





</LinearLayout>
